<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>


<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.agencia.controller.ReservasController">
    <top>
        <!-- Barra superior con título -->
        <HBox alignment="CENTER" style="-fx-background-color: #336699;">
            <Text fill="WHITE" text="Mis Reservas"/>
        </HBox>
    </top>

    <center>
        <!-- Contenido principal -->
        <ListView fx:id="reservasListView" prefWidth="300" prefHeight="200"/>
    </center>

    <bottom>
        <!-- Botón para cerrar la ventana -->
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #336699;">
            <Button text="Cerrar" />
        </HBox>
    </bottom>
</BorderPane>